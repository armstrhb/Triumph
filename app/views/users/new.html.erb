<div class="container">
  <div class="jumbotron">
    <h1>Triumph<br/><small>Join the winning team.</small></h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <%= form_for(@user) do |u| %>
          <%= render 'error_messages' %>
          <div class="form-group">
            <%= u.label :name %>
            <%= u.text_field :name, class: "form-control", placeholder: "Enter a username" %>
          </div>

          <div class="form-group">
            <%= u.label :email %>
            <%= u.text_field :email, class: "form-control", placeholder: "Enter your email address" %>
          </div>

          <div class="form-group">
            <%= u.label :password %>
            <%= u.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

          <div class="form-group">
            <%= u.label :password_confirmation, "Confirmation" %>
            <%= u.password_field :password_confirmation, class: "form-control", placeholder: "Confirm that password" %>
          </div>

          <%= u.submit "Sign up!", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
