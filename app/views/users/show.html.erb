<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1>
        <%= gravatar_for @user.email %>
        <%= @user.name %>
        <small>User Details</small>
      </h1>
    </div>
    <div class="col-sm-3">
      <h1><%= @user.completions %> <small>completions</small><h1>
    </div>
    <div class="col-sm-3">
      <h1><%= @user.total_points %> <small>points</small></h1>
    </div>
  </div>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
      <span class="text-muted">email: </span><%= @user.email %><br/>
      <span class="text-muted">user since: </span><%= @user.created_at.strftime("%m/%d/%Y") %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9">
      <strong>Realms</strong>
      <div class="row">
        <% @user.realms.each do |r| %>
          <div class="col-sm-7">
            <span class="fa fa-fw fa-<%= r.icon.name %>" style="color:<%= r.color %>"></span> 
            <%= link_to r.name, r %>
          </div>
          <div class="col-sm-3 text-right">
            <% @user.realm_completions(r).each do |rarity, completions| %>
              <% if completions > 0 %>
                <span class="fa fa-fw fa-<%= rarity.icon.name %>" aria-hidden="true" data-toggle="tooltip" title="<%= rarity.name %>" style="color:<%= rarity.color %>"></span>
                <%= completions %>
              <% end %>
            <% end %>
          </div>
          <div class="col-sm-2 text-right">
            <%= @user.points_for_realm(r) %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-3">
      <strong>Groups</strong>
      <div class="row">
        <% @user.groups.each do |g| %>
          <div class="col-sm-12">
            <%= g.name %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
