$("#progress-bar-<%= @progress.user.id %>").fadeOut(250, function() {
  <% if @progress.completed? %>
    $(this).addClass('progress-bar-success');
  <% else %>
    $(this).removeClass('progress-bar-success');
  <% end %>
  $(this).css('width', '<%= number_to_percentage(@progress.percent_complete, precision: 1) %>');
  $(this).attr('aria-valuenow', '<%= @progress.ticks %>');
  $(this).html('<%= number_to_percentage(@progress.percent_complete, precision: 1) %>');
  $(this).fadeIn(250);
});

if ($("#times-completed-<%= @progress.user.id %>").html() != '<%= @progress.user.times_completed(@progress.achievement) %>') {
  $("#times-completed-<%= @progress.user.id %>").fadeOut(250, function() {
    $(this).html('<%= @progress.user.times_completed(@progress.achievement) %>');
    $(this).fadeIn(250);
  });
}
