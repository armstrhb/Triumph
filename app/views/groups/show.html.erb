<div class="container">
  <div class="jumbotron">
    <h1>Group Detail <small><%= @group.name %></small></h1>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <ul class="nav nav-pills">
        <li class="presentation"><%= link_to "Back to Groups", groups_path %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="panel panel-default">
        <div class="panel-heading">Members</div>
        <div class="panel-body">
          <table class="table table-hover table-striped">
            <% @group.users.each do |u| %>
              <tr data-link="<%= user_path(u) %>">
                <td class="text-left"><%= gravatar_for u.email, 20 %> <%= u.name %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading">Information</div>
        <div class="panel-body">
          <table class="table">
            <tr>
              <td class="text-muted">Created</td>
              <td><%= @group.created_at.strftime "%m/%d/%Y" %></td>
            </tr>
            <tr>
              <td class="text-muted">Updated</td>
              <td><%= @group.updated_at.strftime "%m/%d/%Y" %></td>
            </tr>
            <tr>
              <td class="text-muted">Admin</td>
              <td><%= gravatar_for @group.admin.email, 20 %> <%= @group.admin.name %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
