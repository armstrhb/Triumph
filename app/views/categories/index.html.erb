<%= stylesheet_link_tag 'categoryIndex', :media => 'all' %>

<div class="container">
  <div class="jumbotron">
    <h1>Achievement Categories</h1>
  </div>

<div class="row">
  <div class="col-sm-12">
    <h3>Below are the achievement types in your Realm.</h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if @categories.length > 0 %>
    <table id="category-table" class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>Description</th>
        <th>Realm</th>
      </tr>
      <%= render @categories %>
    </table>
    <% else %>
    <div class="col-sm-12">
      <span class="text-muted">There are no categories in this realm. Lame.</span>
    <div>
    <div class="col-sm-12">
      <div class="row">
        <%= link_to 'New Category', new_category_path, class: "btn btn-default" %>
      </div>
    </div>
    <% end %>
  </div>
 </div>
 </div>
</div>



</div>
