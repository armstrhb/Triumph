<div class="container">
  <div class="header">
    <h1><%= @realm.name %> <small>Rarities</small></h1>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <% if @rarities.length > 0 %>
        <table id="rarity-table" class='table table-striped table-hover'>
          <tr>
            <th>Rarity</th>
            <th>Description</th>
            <th>Achievements</th>
          </tr>
          <%= render @rarities %>
        </table>
      <% else %>
      <div class="col-sm-12">
        <span class="text-muted">There are no rarities in this realm.</span>
      </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $("tr[data-link]").click(function() {
    window.location = this.dataset.link;
  });
</script>
