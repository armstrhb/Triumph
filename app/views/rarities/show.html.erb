<div class="container">
  <div class="header">
    <h1>Rarity <small><%= @rarity.name %></small></h1>
    <h2><small><%= @rarity.description %></small></h2>
  </div>
  <div class="row">
    <% if @rarity.achievements.length > 0 %>
    <table class='table table-striped table-hover'>
      <tr>
        <th>Achievement</th>
        <th>Description</th>
        <th>Points</th>
        <th>Category</th>
      </tr>
      <% @rarity.achievements.each do |a| %>
        <tr>
          <td><%= a.title %></td>
          <td><%= a.description %></td>
          <td><%= a.points %></td>
          <td><%= a.category.name %></td>
        </tr>
      <% end %>
    </table>
    <% else %>
      <div class="col-sm-12">
        <span class="text-muted">No achievements have this rarity.</span>
      </div>
    <% end %>
  </div>
</div>
