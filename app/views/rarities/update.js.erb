<% if ! @rarity.errors.any? %>
  $("#rarity-name").fadeOut(250, function() {
    $(this).html("<%= @rarity.name %>");
    $(this).fadeIn(250);
  });

  $("#rarity-description").fadeOut(250, function() {
    $(this).html("<%= @rarity.description %>");
    $(this).fadeIn(250);
  });

  $("#rarity-icon").fadeOut(250, function() {
    $(this).css({"color": "<%= @rarity.color %>"});
    $(this).removeClass();
    $(this).addClass('fa fa-fw fa-3x fa-<%= @rarity.icon.name %>');
    $(this).fadeIn(250);
  });
<% end %>
